<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp_tv"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>

    <TextView
            android:text="WindSpeed"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:id="@+id/wind_tv"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>

    <TextView
            android:text="rainVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rain_tv"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            />

    <TextView
            android:text="9:00 - 12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_tv"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/date_tv"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/icon_iv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/icon_iv"
            app:layout_constraintEnd_toStartOf="@+id/temp_tv"
            android:layout_marginTop="8dp"/>

    <TextView
            android:text="9:00 - 12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_tv"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/time_tv"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/time_tv"
            app:layout_constraintEnd_toEndOf="@+id/time_tv"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_iv"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3f3f3f"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/view"/>

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/icon_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/thermometer"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wind"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="8dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/drop"
            android:id="@+id/imageView6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

</android.support.constraint.ConstraintLayout>